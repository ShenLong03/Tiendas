@model IEnumerable<Domain.Productos>

@{
    ViewBag.Title = "Index";
}
<style>
    h2, h4, th, dt, label, a {
        color: white;
        text-shadow: 1px 1px 2px white, 0 0 25px blue, 0 0 5px White;
    }

    td, dd {
        color: white;
        text-shadow: 2px 2px 5px white;
    }

    #Bordear {
        border-radius: 50%;
    }

    a:hover {
        color: white;
    }

    #Bordear:hover {
        box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
        font-size: 15px;
    }
</style>
<h2>Mantenimiento Articulos</h2>

<p>
    <a class="btn btn-primary" id="Bordear" href="@Url.Action("Create")">Crear Nuevo</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Talla)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodigoId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foto)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Talla)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CodigoId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cantidad)
        </td>
         <td>
                    @if (!string.IsNullOrEmpty(item.Foto))
                    {
                        <center>
                            <img src="@Url.Content(item.Foto)" class="img-mid imagen-increase-big" />
                        </center>
                    }
                    else
                    {
                        <center>
                            <img src="~/images/user.png" class="img-mid imagen-increase-big" />
                        </center>
                    }
                </td>
        <td>
            <a class="btn btn-warning" id="Bordear" href="@Url.Action("Edit", new { id = item.ProductoId })">  Editar</a>

            <a class="btn btn-info" id="Bordear" href="@Url.Action("Details", new { id = item.ProductoId })"> Detalles</a>

            <a class="btn btn-danger" id="Bordear" href="@Url.Action("Delete", new { id = item.ProductoId })"> Borrar</a>

        </td>
    </tr>
}

</table>
