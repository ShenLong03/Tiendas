@model IEnumerable<Domain.Productos>

@{
    ViewBag.Title = "Index";
}

<h2>Mantenimiento Articulos</h2>

<p>
    <a class="btn btn-primary" href="@Url.Action("Create")">Crear Nuevo</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tallas.Abreviatura)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodigoId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tallas.Abreviatura)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CodigoId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cantidad)
        </td>
        <td>
            <a class="btn btn-warning" href="@Url.Action("Edit", new { id = item.ProductoId })">  Editar</a>

            <a class="btn btn-info" href="@Url.Action("Details", new { id = item.ProductoId })"> Detalles</a>

            <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.ProductoId })"> Borrar</a>

        </td>
    </tr>
}

</table>
