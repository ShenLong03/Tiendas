<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Gryllo</title>
    <link href="~/Content/semantic.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        #grad1 {
            height: 200px;
            background-image: linear-gradient(to right, black,black);
        }
        li,p {
            color: white;
        }
        li:hover {
            color: white;
        }
    </style>
</head>
<body  id="grad1">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Gryllo", "Index", "Ventas", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Facturacion", "Index", "Ventas")</li>
                    <li>@Html.ActionLink("Mantenimiento Productos", "Index", "Productos")</li>
                    <li>@Html.ActionLink("Reportes Ventas", "CargarVentas", "Ventas")</li>
                </ul>
            </div>
        </div>
    </div>
   
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year  amarusystems</p>
            </footer>
        </div>
 
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        <script src="~/Scripts/semantic.js"></script>
        @RenderSection("scripts", required: false)
</body>
</html>
