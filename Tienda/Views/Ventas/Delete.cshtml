@model Domain.Ventas

@{
    ViewBag.Title = "Delete";
}


<style>
    h2, th,dt {
        color: white;
        text-shadow: 1px 1px 2px black, 0 0 25px blue, 0 0 5px darkblue;
    }
    h3 {
        text-shadow: 2px 2px 5px red;
    }
    td,dd {
        text-shadow: 2px 2px 5px gray;
    }

    #Bordear {
        border-radius: 40%;
    }

        #Bordear:hover {
            box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
            font-size: 15px;
        }
</style>
<h2>Borrar Venta</h2>

<h3>Estas Seguro Borrar Esta Venta?</h3>
<div>
   
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Cliente.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Fecha)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TotalOrden)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalOrden)
        </dd>

        

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Borrar" id="Bordear" class="btn btn-danger" /> |
        @Html.ActionLink("Volver Lista Detalles", "Details", new { id = Model.VentaId }, new { @class = "btn btn-info", @id = "Bordear" })
    </div>
    }
</div>
