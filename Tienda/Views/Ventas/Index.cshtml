@model IEnumerable<Domain.Ventas>

@{
    ViewBag.Title = "Index";
}
<style>
    h2,th {
        color: white;
        text-shadow: 1px 1px 2px black, 0 0 25px blue, 0 0 5px darkblue;
    }
   td {
        text-shadow: 2px 2px 5px gray;
    }

    #Bordear {
        border-radius: 40%;
  
       
   
    }
        #Bordear:hover {
            box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
            font-size: 15px;
        }
</style>

    <h2>Pagina Principal</h2>

    <p>
        @Html.ActionLink("Crear Nueva Factura", "Create", new { }, new { @class = "btn btn-primary",@id= "Bordear" })
    </p>


    <table class="table">
        <tr>
            <th>
                Nombre Cliente
            </th>
            <th>
                Fecha Orden
            </th>
            <th>
               Total Orden
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalOrden)
                </td>


                <td>
                    @Html.ActionLink("Editar Venta", "Edit", new { id = item.VentaId }, new { @class = "btn btn-warning", @id = "Bordear" }) |
                    @Html.ActionLink("Detalles Venta", "Details", new { id = item.VentaId }, new { @class = "btn btn-info", @id = "Bordear" }) |
                    @Html.ActionLink("Borrar Venta", "Delete", new { id = item.VentaId }, new { @class = "btn btn-danger", @id = "Bordear" })
                </td>



            </tr>
        }

    </table>


